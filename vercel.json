{
  "version": 2,
  "builds": [
    {
      "src": "api/screenshot.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/playwright/**",
          "node_modules/@playwright/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/screenshot(?:/.*)?",
      "dest": "/api/screenshot.js",
      "methods": ["GET", "POST"]
    }
  ]
}